<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:text="Board Name"
        />

    <EditText
        android:id="@+id/etbname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <CheckBox
        android:id="@+id/cbtilldate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snap Board"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/boardtilldate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date?"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/bcreateboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Create Board"
        />
</LinearLayout><!-- From: file:/C:/Users/Priyanka/AndroidStudioProjects/pintrest/Pinterest-2015-10-17/Pinterest/app/src/main/res/layout/dialogview.xml -->