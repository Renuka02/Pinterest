<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Click on stars to rate"
        android:layout_gravity="center"
        />


    <RatingBar
        android:id="@+id/boardstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:stepSize="1"
        />

    <Button
        android:id="@+id/rateit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate IT"
        android:background="#B00423"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        />

</LinearLayout><!-- From: file:/C:/Users/Priyanka/AndroidStudioProjects/pintrest/Pinterest-2015-10-17/Pinterest/app/src/main/res/layout/rateaboard.xml -->