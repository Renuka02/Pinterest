<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.renukamatkar.pinterest.User_Details">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation = "8dp"
        android:layout_margin="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="#ffffff"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.example.renukamatkar.pinterest.RoundedImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/noimg"
                android:id="@+id/userdp"
                android:layout_weight="0.2"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="USER_NAME"
                android:id="@+id/username"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="0.4"
                />

            <Button
                android:id="@+id/followuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOLLOW"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:background="#B00423"
                android:padding="5dp"
                android:layout_marginBottom="8dp"
                android:textColor="#ffffff"
                android:layout_weight="0.3"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:padding="8dp"
        >
        <com.example.renukamatkar.pinterest.SlidingTabLayout
            android:background="#B00423"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabs"></com.example.renukamatkar.pinterest.SlidingTabLayout>

        <android.support.v4.view.ViewPager
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/pager"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            ></android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>
