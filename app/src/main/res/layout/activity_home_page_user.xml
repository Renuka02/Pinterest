<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.renukamatkar.pinterest.HomePageUser">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/Homepageusertext"
        android:ems="10"
        android:id="@+id/homepageuserid"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="name" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="option"
        android:id="@+id/optionbuttontext"
        android:layout_alignTop="@+id/homepageuserid"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:onClick="connectclick" />
</RelativeLayout>
