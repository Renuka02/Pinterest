<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.renukamatkar.pinterest.Pin">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="10dp"
         android:elevation="4dp"
         >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="match_parent">


        <TextView
            android:id = "@+id/pinacttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:textStyle="bold"
            android:gravity="center"
            />

        <ImageView
           android:id = "@+id/pinactiv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/noimg"
            />

        <TextView
            android:id = "@+id/pinactuser"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="By : Owner"
            />


        <TextView
            android:id = "@+id/pinactdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="HERE COMES DESCRIPTION"
            />

    </LinearLayout>
     </android.support.v7.widget.CardView>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:elevation="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hrt"
                android:layout_margin="5dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:id="@+id/countlikes"
                    android:textColor="#cccccc"
                    android:text="0 like(s)"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/pinonmyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin It!"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:background="#B00423"
                android:textColor="#ffffff"
                android:layout_margin="5dp"
                />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
