<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.renukamatkar.pinterest.ConnectingOption"

    android:background="#3c5fff"
    android:onClick="connectclick">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Board"
        android:id="@+id/createboardtext"
        android:layout_marginTop="31dp"
        android:clickable="true"
        android:width="400dp"
        android:maxWidth="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="createboardclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchbuttontext"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/createboardtext"
        android:width="400dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chatbuttonres"
        android:id="@+id/chatbuttontext"
        android:layout_centerVertical="true"
        android:width="400dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/biobuttonres"
        android:id="@+id/biobuttontext"
        android:layout_below="@+id/chatbuttontext"
        android:layout_alignParentStart="true"
        android:width="400dp"
        android:layout_marginTop="45dp" />
</RelativeLayout>
